{
    "tasks": [
        {
            "label": "concat",
            "type": "shell",
            "command": "python3",
            "args": [
                "tools/concat.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "builds single c++ source file to submit",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "cat output",
            "type": "shell",
            "command": "cat",
            "args": [
                "out/output.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none"
        },
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "builds the compet-rust binary",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "c++ build current test",
            "type": "cppbuild",
            "command": "/usr/bin/c++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}/testing/unit.cpp",
                "-o",
                "${workspaceFolder}/out/test",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${workspaceFolder}/out"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "builds the current test",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
    ],
    "version": "2.0.0"
}